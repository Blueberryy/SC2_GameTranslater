<Fluent:RibbonWindow
    x:Class="SC2_GameTranslater.SC2_GameTranslater_Window"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Fluent="urn:fluent-ribbon"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SC2_GameTranslater"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:source="clr-namespace:SC2_GameTranslater.Source"
    Name="RibbonWindow_Main"
    Width="1600"
    Height="900"
    Closing="RibbonWindow_Main_Closing"
    Icon="pack://application:,,,/Assets/Image/Icon.ico"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Window.InputBindings>
        <KeyBinding Command="{x:Static local:SC2_GameTranslater_Window.CommandNew}" Gesture="Control+N" />
        <KeyBinding Command="{x:Static local:SC2_GameTranslater_Window.CommandOpen}" Gesture="Control+O" />
        <KeyBinding Command="{x:Static local:SC2_GameTranslater_Window.CommandSave}" Gesture="Control+S" />
        <KeyBinding Command="{x:Static local:SC2_GameTranslater_Window.CommandClose}" Gesture="Control+W" />
        <KeyBinding Command="{x:Static local:SC2_GameTranslater_Window.CommandAccept}" Gesture="Control+E" />
        <KeyBinding Command="{x:Static local:SC2_GameTranslater_Window.CommandReloadTranslation}" Gesture="Control+R" />
        <KeyBinding Command="{x:Static local:SC2_GameTranslater_Window.CommandReloadSourceText}" Gesture="Control+T" />
        <KeyBinding Command="{x:Static local:SC2_GameTranslater_Window.FilterRecordPrev}" Gesture="Control+Left" />
        <KeyBinding Command="{x:Static local:SC2_GameTranslater_Window.FilterRecordNext}" Gesture="Control+Right" />
        <KeyBinding Command="{x:Static local:SC2_GameTranslater_Window.SearchClick}" Gesture="Control+F" />
    </Window.InputBindings>
    <Fluent:RibbonWindow.Title>
        <MultiBinding Converter="{StaticResource Converter_TitleText}">
            <Binding ElementName="RibbonWindow_Main" Path="CurrentProjectName" />
            <Binding ElementName="RibbonWindow_Main" Path="CurrentProjectNeedSave" />
            <Binding ElementName="RibbonWindow_Main" Path="EnumCurrentLanguage" />
        </MultiBinding>
    </Fluent:RibbonWindow.Title>
    <Grid Name="Grid_Main">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="3*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="2*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Fluent:Ribbon
            Name="Ribbon_Main"
            Grid.Row="0"
            Grid.ColumnSpan="2"
            AutomaticStateManagement="False"
            IsAutomaticCollapseEnabled="True"
            SelectedTabIndex="1">
            <Fluent:Ribbon.Menu>
                <Fluent:Backstage
                    Name="Backstage_Menu"
                    Header="{DynamicResource UI_Backstage_Menu_Header}"
                    KeyTip="M">
                    <Fluent:BackstageTabControl>
                        <Fluent:SeparatorTabItem
                            Name="SeparatorTabItem_Projects"
                            Margin="0,0,0,0"
                            HorizontalContentAlignment="Left"
                            Header="{DynamicResource UI_SeparatorTabItem_Projects_Header}" />
                        <Fluent:Button
                            x:Name="RibbonButton_MenuNew"
                            Command="{x:Static local:SC2_GameTranslater_Window.CommandNew}"
                            Header="{DynamicResource UI_RibbonButton_New_Header}"
                            Icon="{StaticResource ResourceKey=IMAGE_New}"
                            ToolTip="{StaticResource ToolTip_New}" />
                        <Fluent:Button
                            x:Name="RibbonButton_MenuOpen"
                            Command="{x:Static local:SC2_GameTranslater_Window.CommandOpen}"
                            Header="{DynamicResource UI_RibbonButton_Open_Header}"
                            Icon="{StaticResource ResourceKey=IMAGE_Open}"
                            ToolTip="{StaticResource ToolTip_Open}" />
                        <Fluent:Button
                            x:Name="RibbonButton_MenuSave"
                            Command="{x:Static local:SC2_GameTranslater_Window.CommandSave}"
                            Header="{DynamicResource UI_RibbonButton_Save_Header}"
                            Icon="{StaticResource ResourceKey=IMAGE_Save}"
                            ToolTip="{StaticResource ToolTip_Save}" />
                        <Fluent:Button
                            x:Name="RibbonButton_MenuSaveAs"
                            Command="{x:Static local:SC2_GameTranslater_Window.CommandSaveAs}"
                            Header="{DynamicResource UI_RibbonButton_SaveAs_Header}"
                            Icon="{StaticResource ResourceKey=IMAGE_Save}"
                            ToolTip="{StaticResource ToolTip_New}" />
                        <Fluent:Button
                            x:Name="RibbonButton_MenuClose"
                            Command="{x:Static local:SC2_GameTranslater_Window.CommandClose}"
                            Header="{DynamicResource UI_RibbonButton_Close_Header}"
                            Icon="{StaticResource ResourceKey=IMAGE_Close}"
                            ToolTip="{StaticResource ToolTip_SaveAs}" />
                        <Fluent:Button
                            x:Name="RibbonButton_MenuAccept"
                            Command="{x:Static local:SC2_GameTranslater_Window.CommandAccept}"
                            Header="{DynamicResource UI_RibbonButton_Accept_Header}"
                            Icon="{StaticResource ResourceKey=IMAGE_Accept}"
                            ToolTip="{StaticResource ToolTip_Close}" />
                        <Fluent:SeparatorTabItem
                            Name="SeparatorTabItem_RecentProjects"
                            Margin="0,20,0,0"
                            HorizontalContentAlignment="Left"
                            Header="{DynamicResource UI_SeparatorTabItem_RecentProjects_Header}" />
                        <Fluent:BackstageTabItem
                            x:Name="BackstageTabItem_RecentProjects"
                            Header="{DynamicResource UI_BackstageTabItem_RecentProjects_Header}"
                            ToolTip="{StaticResource ToolTip_RecentProjects}">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <Label Grid.Row="0">
                                    <TextBlock
                                        Name="TextBlock_RecentProjects"
                                        Margin="3"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        FontSize="20"
                                        FontWeight="Bold"
                                        Text="{DynamicResource UI_TextBlock_RecentProjects_Text}" />
                                </Label>
                                <Separator Grid.Row="1" />
                                <ItemsControl
                                    Name="ItemsControl_RecentFiles"
                                    Grid.Row="2"
                                    Margin="3"
                                    BorderThickness="0" />
                            </Grid>
                        </Fluent:BackstageTabItem>
                        <Fluent:SeparatorTabItem
                            Name="SeparatorTabItem_Preferences"
                            Margin="0,20,0,0"
                            HorizontalContentAlignment="Left"
                            Header="{DynamicResource UI_SeparatorTabItem_Preferences_Header}" />
                        <Fluent:BackstageTabItem
                            x:Name="BackstageTabItem_Preference"
                            Header="{DynamicResource UI_BackstageTabItem_Preference_Header}"
                            ToolTip="{StaticResource ToolTip_Preference}">
                            <ScrollViewer Name="ScrollViewer_Preference">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <Label Grid.Row="0">
                                        <TextBlock
                                            Name="TextBlock_Preference"
                                            Margin="3"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Center"
                                            FontSize="20"
                                            FontWeight="Bold"
                                            Text="{DynamicResource UI_TextBlock_Preference_Text}" />
                                    </Label>
                                    <Separator Grid.Row="1" />
                                    <GroupBox
                                        Name="GroupBox_Language"
                                        Grid.Row="2"
                                        Margin="3"
                                        ToolTip="{StaticResource ToolTip_SoftwareLanguage}">
                                        <GroupBox.Header>
                                            <Label>
                                                <TextBlock Text="{DynamicResource UI_GroupBox_Language_Header}" />
                                            </Label>
                                        </GroupBox.Header>
                                        <ComboBox
                                            Name="ComboBox_Language"
                                            Margin="3"
                                            SelectionChanged="ComboBox_Language_SelectionChanged" />
                                    </GroupBox>
                                    <GroupBox
                                        Name="GroupBox_ComponentsPath"
                                        Grid.Row="3"
                                        ToolTip="{StaticResource ToolTip_ComponentsPath}">
                                        <GroupBox.Header>
                                            <Label>
                                                <TextBlock Text="{DynamicResource UI_GroupBox_ComponentsPath_Header}" />
                                            </Label>
                                        </GroupBox.Header>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="80" />
                                            </Grid.ColumnDefinitions>
                                            <TextBox
                                                Name="TextBox_ComponentsPath"
                                                Grid.Column="0"
                                                MinWidth="50"
                                                Margin="3"
                                                HorizontalAlignment="Stretch"
                                                VerticalContentAlignment="Center"
                                                IsReadOnly="True" />
                                            <Button
                                                Name="Button_SelectComponentsPath"
                                                Grid.Column="1"
                                                Margin="3"
                                                Padding="3"
                                                Command="{x:Static local:SC2_GameTranslater_Window.CommandComponentsPath}"
                                                Content="{DynamicResource UI_Button_SelectComponentsPath_Content}" />
                                        </Grid>
                                    </GroupBox>
                                </Grid>
                            </ScrollViewer>
                        </Fluent:BackstageTabItem>
                    </Fluent:BackstageTabControl>
                </Fluent:Backstage>
            </Fluent:Ribbon.Menu>
            <Fluent:Ribbon.ToolBarItems>
                <Fluent:Button
                    Name="RibbonButton_Help"
                    Click="RibbonButton_Help_Click"
                    Icon="{DynamicResource IMAGE_HELP}"
                    Size="Small">
                    <Fluent:Button.ToolTip>
                        <Fluent:ScreenTip
                            Title="{DynamicResource TP_RibbonButton_Help_Title}"
                            Width="300"
                            DisableReason="{DynamicResource TP_RibbonButton_Help_DisableReason}"
                            HelpTopic="{x:Static source:Class_ConstantAndEnum.Link_HelpTopic}"
                            IsRibbonAligned="False"
                            Text="{DynamicResource TP_RibbonButton_Help_Text}" />
                    </Fluent:Button.ToolTip>
                </Fluent:Button>
            </Fluent:Ribbon.ToolBarItems>
            <Fluent:Ribbon.QuickAccessItems>
                <Fluent:QuickAccessMenuItem
                    IsChecked="True"
                    Target="{Binding Source={x:Reference RibbonButton_New}}"
                    ToolTip="{StaticResource ToolTip_New}" />
                <Fluent:QuickAccessMenuItem
                    IsChecked="True"
                    Target="{Binding Source={x:Reference RibbonButton_Open}}"
                    ToolTip="{StaticResource ToolTip_Open}" />
                <Fluent:QuickAccessMenuItem
                    IsChecked="True"
                    Target="{Binding Source={x:Reference RibbonButton_Save}}"
                    ToolTip="{StaticResource ToolTip_Save}" />
                <Fluent:QuickAccessMenuItem
                    IsChecked="True"
                    Target="{Binding Source={x:Reference RibbonButton_Close}}"
                    ToolTip="{StaticResource ToolTip_Close}" />
                <Fluent:QuickAccessMenuItem
                    IsChecked="True"
                    Target="{Binding Source={x:Reference RibbonButton_FilterPrev}}"
                    ToolTip="{StaticResource ToolTip_FilterPrev}" />
                <Fluent:QuickAccessMenuItem
                    IsChecked="True"
                    Target="{Binding Source={x:Reference RibbonButton_FilterNext}}"
                    ToolTip="{StaticResource ToolTip_FilterNext}" />
            </Fluent:Ribbon.QuickAccessItems>
            <Fluent:RibbonTabItem
                Name="RibbonTabItem_Start"
                Header="{DynamicResource UI_RibbonTabItem_Start_Header}"
                KeyTip="G">
                <Fluent:RibbonGroupBox
                    Name="RibbonGroupBox_File"
                    Width="Auto"
                    Grid.IsSharedSizeScope="True"
                    Header="{DynamicResource UI_RibbonGroupBox_File_Header}">
                    <Fluent:Button
                        x:Name="RibbonButton_New"
                        Command="{x:Static local:SC2_GameTranslater_Window.CommandNew}"
                        Header="{DynamicResource UI_RibbonButton_New_Header}"
                        Icon="{StaticResource ResourceKey=IMAGE_New}"
                        LargeIcon="{StaticResource ResourceKey=IMAGE_New}"
                        ToolTip="{StaticResource ToolTip_New}" />
                    <Fluent:Button
                        x:Name="RibbonButton_Open"
                        Command="{x:Static local:SC2_GameTranslater_Window.CommandOpen}"
                        Header="{DynamicResource UI_RibbonButton_Open_Header}"
                        Icon="{StaticResource ResourceKey=IMAGE_Open}"
                        LargeIcon="{StaticResource ResourceKey=IMAGE_Open}"
                        ToolTip="{StaticResource ToolTip_Open}" />
                    <Fluent:Button
                        x:Name="RibbonButton_Save"
                        Command="{x:Static local:SC2_GameTranslater_Window.CommandSave}"
                        Header="{DynamicResource UI_RibbonButton_Save_Header}"
                        Icon="{StaticResource ResourceKey=IMAGE_Save}"
                        LargeIcon="{StaticResource ResourceKey=IMAGE_Save}"
                        ToolTip="{StaticResource ToolTip_Save}" />
                    <Fluent:Button
                        x:Name="RibbonButton_SaveAs"
                        Command="{x:Static local:SC2_GameTranslater_Window.CommandSaveAs}"
                        Header="{DynamicResource UI_RibbonButton_SaveAs_Header}"
                        Icon="{StaticResource ResourceKey=IMAGE_Save}"
                        LargeIcon="{StaticResource ResourceKey=IMAGE_Save}"
                        ToolTip="{StaticResource ToolTip_SaveAs}" />
                    <Fluent:Button
                        x:Name="RibbonButton_Close"
                        Command="{x:Static local:SC2_GameTranslater_Window.CommandClose}"
                        Header="{DynamicResource UI_RibbonButton_Close_Header}"
                        Icon="{StaticResource ResourceKey=IMAGE_Close}"
                        LargeIcon="{StaticResource ResourceKey=IMAGE_Close}"
                        ToolTip="{StaticResource ToolTip_Close}" />
                    <Separator />
                    <Fluent:Button
                        x:Name="RibbonButton_Accept"
                        Command="{x:Static local:SC2_GameTranslater_Window.CommandAccept}"
                        Header="{DynamicResource UI_RibbonButton_Accept_Header}"
                        Icon="{StaticResource ResourceKey=IMAGE_Accept}"
                        LargeIcon="{StaticResource ResourceKey=IMAGE_Accept}"
                        ToolTip="{StaticResource ToolTip_Accept}" />
                    <Fluent:Button
                        Name="RibbonButton_ReloadTranslation"
                        Command="{x:Static local:SC2_GameTranslater_Window.CommandReloadTranslation}"
                        Header="{DynamicResource UI_RibbonButton_ReloadTranslation_Header}"
                        Icon="{StaticResource ResourceKey=IMAGE_ReloadTranslation}"
                        LargeIcon="{StaticResource ResourceKey=IMAGE_ReloadTranslation}"
                        ToolTip="{StaticResource ToolTip_ReloadTranslation}" />
                    <Fluent:Button
                        Name="RibbonButton_ReloadSourceText"
                        Command="{x:Static local:SC2_GameTranslater_Window.CommandReloadSourceText}"
                        Header="{DynamicResource UI_RibbonButton_ReloadSourceText_Header}"
                        Icon="{StaticResource ResourceKey=IMAGE_ReloadSourceText}"
                        LargeIcon="{StaticResource ResourceKey=IMAGE_ReloadSourceText}"
                        ToolTip="{StaticResource ToolTip_ReloadSourceText}" />
                </Fluent:RibbonGroupBox>
                <Fluent:RibbonGroupBox
                    Name="RibbonGroupBox_FilterRecord"
                    Width="Auto"
                    Grid.IsSharedSizeScope="True"
                    Header="{DynamicResource UI_RibbonGroupBox_FilterRecord_Header}">
                    <Fluent:Button
                        x:Name="RibbonButton_FilterPrev"
                        Command="{x:Static local:SC2_GameTranslater_Window.FilterRecordPrev}"
                        Header="{DynamicResource UI_RibbonButton_FilterPrev_Header}"
                        Icon="{StaticResource ResourceKey=IMAGE_FilterPrev}"
                        LargeIcon="{StaticResource ResourceKey=IMAGE_FilterPrev}"
                        ToolTip="{StaticResource ToolTip_FilterPrev}" />
                    <Fluent:Button
                        x:Name="RibbonButton_FilterNext"
                        Command="{x:Static local:SC2_GameTranslater_Window.FilterRecordNext}"
                        Header="{DynamicResource UI_RibbonButton_FilterNext_Header}"
                        Icon="{StaticResource ResourceKey=IMAGE_FilterNext}"
                        LargeIcon="{StaticResource ResourceKey=IMAGE_FilterNext}"
                        ToolTip="{StaticResource ToolTip_FilterNext}" />
                </Fluent:RibbonGroupBox>
                <Fluent:RibbonGroupBox
                    Name="RibbonGroupBox_TranslatedLanguage"
                    Grid.IsSharedSizeScope="True"
                    Header="{DynamicResource UI_RibbonGroupBox_TranslatedLanguage_Header}">
                    <Fluent:InRibbonGallery
                        Name="InRibbonGallery_TranslatedLanguageSource"
                        Icon="{Binding ElementName=InRibbonGallery_TranslatedLanguageSource, Path=SelectedItem, Converter={StaticResource Converter_LanguageButtonIcon}}"
                        IsCollapsed="True"
                        LargeIcon="{Binding ElementName=InRibbonGallery_TranslatedLanguageSource, Path=SelectedItem, Converter={StaticResource Converter_LanguageButtonLargeIcon}}"
                        MaxItemsInDropDownRow="3"
                        MaxItemsInRow="3"
                        MinItemsInDropDownRow="1"
                        MinItemsInRow="1"
                        ResizeMode="Both"
                        Selectable="True"
                        SelectionChanged="InRibbonGallery_TranslatedLanguageSource_SelectionChanged"
                        SizeDefinition="Large"
                        Tag="{Binding ElementName=InRibbonGallery_TranslatedLanguageSource, Path=SelectedItem, Converter={StaticResource Converter_LanguageButtonTag}}"
                        ToolTip="{StaticResource ToolTip_TranslateSource}">
                        <Fluent:InRibbonGallery.Header>
                            <MultiBinding Converter="{StaticResource Converter_LanguageButtonHeader}">
                                <Binding ElementName="InRibbonGallery_TranslatedLanguageSource" Path="SelectedItem" />
                                <Binding ElementName="RibbonWindow_Main" Path="EnumCurrentLanguage" />
                            </MultiBinding>
                        </Fluent:InRibbonGallery.Header>
                    </Fluent:InRibbonGallery>
                    <Fluent:InRibbonGallery
                        Name="InRibbonGallery_TranslatedLanguageTarget"
                        Icon="{Binding ElementName=InRibbonGallery_TranslatedLanguageTarget, Path=SelectedItem, Converter={StaticResource Converter_LanguageButtonIcon}}"
                        IsCollapsed="True"
                        LargeIcon="{Binding ElementName=InRibbonGallery_TranslatedLanguageTarget, Path=SelectedItem, Converter={StaticResource Converter_LanguageButtonLargeIcon}}"
                        MaxItemsInDropDownRow="3"
                        MaxItemsInRow="3"
                        MinItemsInDropDownRow="1"
                        MinItemsInRow="1"
                        ResizeMode="Both"
                        Selectable="True"
                        SelectionChanged="InRibbonGallery_TranslatedLanguageTarget_SelectionChanged"
                        SizeDefinition="Large"
                        Tag="{Binding ElementName=InRibbonGallery_TranslatedLanguageTarget, Path=SelectedItem, Converter={StaticResource Converter_LanguageButtonTag}}"
                        ToolTip="{StaticResource ToolTip_TranslateTarget}">
                        <Fluent:InRibbonGallery.Header>
                            <MultiBinding Converter="{StaticResource Converter_LanguageButtonHeader}">
                                <Binding ElementName="InRibbonGallery_TranslatedLanguageTarget" Path="SelectedItem" />
                                <Binding ElementName="RibbonWindow_Main" Path="EnumCurrentLanguage" />
                            </MultiBinding>
                        </Fluent:InRibbonGallery.Header>
                    </Fluent:InRibbonGallery>
                </Fluent:RibbonGroupBox>
                <Fluent:RibbonGroupBox
                    Name="RibbonGroupBox_Search"
                    Fluent:RibbonGroupBoxWrapPanel.SharedSizeGroupName="Group_Serach"
                    FlowDirection="LeftToRight"
                    Grid.IsSharedSizeScope="True"
                    Header="{DynamicResource UI_RibbonGroupBox_Search_Header}">
                    <Fluent:ComboBox
                        Name="ComboBox_SearchScope"
                        Header="{DynamicResource UI_ComboBox_SearchScope_Header}"
                        Icon="{StaticResource ResourceKey=IMAGE_SearchComboBox}"
                        IsEditable="False"
                        SelectedIndex="0"
                        ToolTip="{StaticResource ToolTip_SearchScope}">
                        <ComboBoxItem
                            Name="ComboBoxItem_SearchScopeAll"
                            Content="{DynamicResource UI_ComboBoxItem_SearchScopeALL_Header}"
                            Tag="{x:Static source:EnumSearchTextType.All}"
                            ToolTip="{StaticResource ToolTip_SearchScopeItem_All}" />
                        <ComboBoxItem
                            Name="ComboBoxItem_SearchScopeTextID"
                            Content="{DynamicResource UI_ComboBoxItem_SearchScopeTextID_Header}"
                            Tag="{x:Static source:EnumSearchTextType.ID}"
                            ToolTip="{StaticResource ToolTip_SearchScopeItem_TextID}" />
                        <ComboBoxItem
                            Name="ComboBoxItem_SearchScopeAllText"
                            Content="{DynamicResource UI_ComboBoxItem_SearchScopeALLText_Header}"
                            Tag="{x:Static source:EnumSearchTextType.AllText}"
                            ToolTip="{StaticResource ToolTip_SearchScopeItem_AllText}" />
                        <ComboBoxItem
                            Name="ComboBoxItem_SearchScopeDropedText"
                            Content="{DynamicResource UI_ComboBoxItem_SearchScopeDropedText_Header}"
                            Tag="{x:Static source:EnumSearchTextType.Droped}"
                            ToolTip="{StaticResource ToolTip_SearchScopeItem_DropedText}" />
                        <ComboBoxItem
                            Name="ComboBoxItem_SearchScopeSourceText"
                            Content="{DynamicResource UI_ComboBoxItem_SearchScopeSourceText_Header}"
                            Tag="{x:Static source:EnumSearchTextType.Source}"
                            ToolTip="{StaticResource ToolTip_SearchScopeItem_SourceText}" />
                        <ComboBoxItem
                            Name="ComboBoxItem_SearchScopeEditedText"
                            Content="{DynamicResource UI_ComboBoxItem_SearchScopeEditedText_Header}"
                            Tag="{x:Static source:EnumSearchTextType.Edited}"
                            ToolTip="{StaticResource ToolTip_SearchScopeItem_EditedText}" />
                    </Fluent:ComboBox>
                    <Fluent:ComboBox
                        Name="ComboBox_SearchLocation"
                        Height="22"
                        VerticalAlignment="Bottom"
                        Fluent:RibbonGroupBoxWrapPanel.SharedSizeGroupName="Group_Serach"
                        Header="{DynamicResource UI_ComboBox_SearchLcation_Header}"
                        Icon="{StaticResource ResourceKey=IMAGE_SearchComboBox}"
                        IsEditable="False"
                        SelectedIndex="0"
                        ToolTip="{StaticResource ToolTip_SearchTextLocation}">
                        <Fluent:ComboBox.IsEnabled>
                            <MultiBinding Converter="{StaticResource Converter_SerachLocationByRegexControl}">
                                <Binding ElementName="RadioButton_SearchRegex" Path="IsEnabled" />
                                <Binding ElementName="RadioButton_SearchRegex" Path="IsChecked" />
                            </MultiBinding>
                        </Fluent:ComboBox.IsEnabled>
                        <ComboBoxItem
                            Name="ComboBoxItem_SearchLocationAll"
                            Content="{DynamicResource UI_ComboBoxItem_SearchLocationALL_Header}"
                            Tag="{x:Static source:EnumSearchTextLocation.All}"
                            ToolTip="{StaticResource ToolTip_SearchTextLocationItem_All}" />
                        <ComboBoxItem
                            Name="ComboBoxItem_SearchLocationLeft"
                            Content="{DynamicResource UI_ComboBoxItem_SearchLocationLeft_Header}"
                            Tag="{x:Static source:EnumSearchTextLocation.Left}"
                            ToolTip="{StaticResource ToolTip_SearchTextLocationItem_Left}" />
                        <ComboBoxItem
                            Name="ComboBoxItem_SearchLocationRight"
                            Content="{DynamicResource UI_ComboBoxItem_SearchLocationRight_Header}"
                            Tag="{x:Static source:EnumSearchTextLocation.Right}"
                            ToolTip="{StaticResource ToolTip_SearchTextLocationItem_Right}" />
                    </Fluent:ComboBox>
                    <Fluent:CheckBox
                        Name="CheckBox_SearchCase"
                        Height="18"
                        Margin="2,2,2,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        VerticalContentAlignment="Center"
                        Header="{DynamicResource UI_CheckBox_SearchCase_Header}"
                        Icon="{StaticResource ResourceKey=IMAGE_SearchConfigure}"
                        ToolTip="{StaticResource ToolTip_SearchCase}" />
                    <Fluent:RadioButton
                        Name="RadioButton_SearchNull"
                        HorizontalAlignment="Left"
                        VerticalContentAlignment="Center"
                        GroupName="SerachConfigure"
                        Header="{DynamicResource UI_RadioButton_SearchNull_Header}"
                        Icon="{StaticResource ResourceKey=IMAGE_SearchConfigure}"
                        IsChecked="True"
                        ToolTip="{StaticResource ToolTip_SearchNullMode}" />
                    <Fluent:RadioButton
                        Name="RadioButton_SearchRegex"
                        HorizontalAlignment="Left"
                        VerticalContentAlignment="Center"
                        GroupName="SerachConfigure"
                        Header="{DynamicResource UI_RadioButton_SearchRegex_Header}"
                        Icon="{StaticResource ResourceKey=IMAGE_SearchConfigure}"
                        ToolTip="{StaticResource ToolTip_SearchRegexMode}" />
                    <Fluent:RadioButton
                        Name="RadioButton_SearchNormal"
                        HorizontalAlignment="Left"
                        VerticalContentAlignment="Center"
                        GroupName="SerachConfigure"
                        Header="{DynamicResource UI_RadioButton_SearchNormal_Header}"
                        Icon="{StaticResource ResourceKey=IMAGE_SearchConfigure}"
                        ToolTip="{StaticResource ToolTip_SearchTextMode}" />
                    <Grid
                        Name="Grid_SearchKeyword"
                        Height="65"
                        MinWidth="300">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <source:RibbonLabel
                            x:Name="RibbonLabel_SearchKeyWord"
                            Grid.Row="0"
                            Grid.Column="0"
                            Width="100"
                            HorizontalContentAlignment="Left"
                            VerticalContentAlignment="Center"
                            Header="{DynamicResource UI_StackPanel_SearchKeyWord_Content}"
                            Icon="{StaticResource IMAGE_SearchTextBox}"
                            IsEnabled="{Binding ElementName=TextBox_SearchKeyword, Path=IsEnabled}"
                            Style="{StaticResource RibbonLabelStyle}" />
                        <source:SearchButton
                            x:Name="Button_DoSearch"
                            Grid.Row="1"
                            Grid.RowSpan="2"
                            Grid.Column="0"
                            Width="{Binding ElementName=RibbonLabel_SearchKeyWord, Path=ActualWidth}"
                            Margin="5,3,0,3"
                            HorizontalAlignment="Center"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center"
                            BorderBrush="{DynamicResource Fluent.Ribbon.Brushes.TextBox.BorderBrush}"
                            Command="{x:Static local:SC2_GameTranslater_Window.SearchClick}"
                            ImageStretch="Uniform"
                            NormalImage="{StaticResource ResourceKey=IMAGE_Find}"
                            ToolTip="{StaticResource ToolTip_DoSearch}" />
                        <TextBox
                            Name="TextBox_SearchKeyword"
                            Grid.Row="0"
                            Grid.RowSpan="3"
                            Grid.Column="1"
                            Margin="3"
                            VerticalAlignment="Stretch"
                            HorizontalContentAlignment="Left"
                            VerticalContentAlignment="Top"
                            AcceptsReturn="True"
                            IsEnabled="{Binding ElementName=RadioButton_SearchNull, Path=IsChecked, Converter={StaticResource Converter_CommonNotValue}}"
                            TextWrapping="Wrap"
                            ToolTip="{StaticResource ToolTip_SearchKeyword}" />
                    </Grid>
                </Fluent:RibbonGroupBox>
                <Fluent:RibbonGroupBox
                    Name="RibbonGroupBox_GalaxyFileFilter"
                    Grid.IsSharedSizeScope="True"
                    Header="{DynamicResource UI_RibbonGroupBox_GalaxyFileFilter_Header}"
                    ToolTip="{StaticResource ToolTip_GalaxyFileFilter}">
                    <Fluent:InRibbonGallery
                        Name="InRibbonGallery_GalaxyFileFilter"
                        MinWidth="100"
                        CanCollapseToButton="False"
                        Header="{DynamicResource UI_InRibbonGallery_GalaxyFileFilter_Header}"
                        IsCollapsed="False"
                        MaxItemsInDropDownRow="1"
                        MinItemsInDropDownRow="1"
                        Orientation="Vertical"
                        ResizeMode="Both"
                        Selectable="False">
                        <Fluent:InRibbonGallery.Menu>
                            <Fluent:RibbonMenu>
                                <Fluent:MenuItem
                                    Name="MenuItem_GalaxyFileFilterSelectAll"
                                    Click="MenuItem_GalaxyFileFilterSelectAll_Click"
                                    Header="{DynamicResource TEXT_SelectALL}" />
                                <Fluent:MenuItem
                                    Name="MenuItem_GalaxyFileFilterSelectNone"
